{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["@typescript/native-preview"],
      "matchUpdateTypes": ["minor", "patch"],
      "semanticCommitType": "chore",
      "enabled": true,
      "automerge": true,
      "groupName": "tsgo",
      "groupSlug": "all-minor-patch"
    }
  ]
}

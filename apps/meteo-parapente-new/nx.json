{
  "name": "@meteo-parapente-new/meteo-parapente-new",
  "$schema": "../../node_modules/nx/schemas/nx-schema.json",
  "sourceRoot": "apps/meteo-parapente-new/src",
  "projectType": "application",
  "targets": {
    "storybook": {
      "dependsOn": ["^build", "build"]
    },
    "chromatic": {
      "dependsOn": ["storybook-build"],
      "command": "CHROMATIC_PROJECT_TOKEN=\"chpt_3c8b46fe8647aad\" npx chromatic@latest --storybook-build-dir=storybook-static --only-changed --externals \".storybook/**/*\"",
      "cache": true,
      "inputs": [
        "default",
        "^production",
        {
          "externalDependencies": [
            "chromatic",
            "storybook"
          ]
        }
      ],
      "metadata": {
        "description": "Run chromatic on your storybook",
        "technologies": ["storybook"]
      },
      "options": {
        "cwd": "{projectRoot}"
      },
      "parallelism": false
    }
  }
}

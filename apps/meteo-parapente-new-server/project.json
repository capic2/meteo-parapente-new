{
  "name": "@meteo-parapente-new/meteo-parapente-new-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/meteo-parapente-new-server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/meteo-parapente-new-server/src/main.ts",
        "outputPath": "apps/meteo-parapente-new-server/dist",
        "format": ["esm"],
        "platform": "node",
        "target": "node20",
        "outputFileName": "main.js",
        "bundle": true,
        "tsConfig": "apps/meteo-parapente-new-server/tsconfig.app.json",
        "declarationRootDir": "apps/meteo-parapente-new-server/src",
        "external": [
          "config",
          "better-sqlite3",
          "drizzle-orm",
          "node:fs",
          "node:path",
          "node:module"
        ]
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@meteo-parapente-new/meteo-parapente-new-server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@meteo-parapente-new/meteo-parapente-new-server:build:development"
        },
        "production": {
          "buildTarget": "@meteo-parapente-new/meteo-parapente-new-server:build:production"
        }
      }
    }
  }
}
